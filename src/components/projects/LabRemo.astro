---
import ProjectCard from "@/components/ui/ProjectCard.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const labRemoTechs = {
  JavaScript:
    "bg-yellow-500/10 text-yellow-700 dark:bg-yellow-400/10 dark:text-yellow-200",
  React: "bg-cyan-500/10 text-cyan-700 dark:bg-cyan-400/10 dark:text-cyan-200",
  Python:
    "bg-yellow-500/10 text-yellow-700 dark:bg-yellow-400/10 dark:text-yellow-200",
  Django:
    "bg-emerald-600/10 text-emerald-700 dark:bg-emerald-400/10 dark:text-emerald-200",
  CSS: "bg-blue-500/10 text-blue-700 dark:bg-blue-400/10 dark:text-blue-200",
};
---

<ProjectCard
  title={t("proj.labremo.title")}
  subtitle={t("proj.labremo.subtitle")}
  icon="labRemo"
  iconClass="bg-green-300/30"
  technologies={labRemoTechs}
>
  <div class="prose dark:prose-invert max-w-none leading-relaxed">
    <div class="mb-3 flex items-center">
      <span
        class="inline-flex items-center gap-1.5 rounded bg-amber-500/10 px-2 py-1 text-xs font-medium text-amber-700 dark:bg-amber-400/10 dark:text-amber-200"
      >
        <span class="relative flex h-2 w-2">
          <span
            class="absolute inline-flex h-full w-full animate-ping rounded-full bg-amber-600 opacity-75"
          ></span>
          <span class="relative inline-flex h-2 w-2 rounded-full bg-amber-500"
          ></span>
        </span>
        {t("proj.labremo.wip")}
      </span>
    </div>

    <p set:html={t("proj.labremo.desc")} />

    <ul class="mt-2 list-none space-y-2 pl-0 text-gray-600 dark:text-gray-300">
      <li class="flex gap-2">
        <span class="font-bold text-sky-500">›</span>
        <span set:html={t("proj.labremo.li1")} />
      </li>

      <li class="flex gap-2">
        <span class="font-bold text-sky-500">›</span>
        <span set:html={t("proj.labremo.li2")} />
      </li>
    </ul>
  </div>
</ProjectCard>
